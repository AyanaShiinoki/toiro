<% users.each do |user| %>
	<%= user.name %>さん<br>
	<%= user.follower.count %>人をフォローしています。<br>
	<%= user.followed.count %>人にフォローされています。<br>

	<% if user != current_user %>
		<% if current_user.following?(user) %>
			<%= link_to "フォローを解除する" , users_user_relationships_path(user.id), method: :delete %>
		<% else %>
			<%= link_to "フォローする", users_user_relationships_path(user.id), method: :POST %>
		<% end %>
	<% end %>
	<%= link_to "ユーザーを見に行く", users_user_path(user.id) %>
<% end %>