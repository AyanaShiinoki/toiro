<div class="container gallery-index">
	<div class = "row">
		<div class = "col xl4 l4 m4 s4 offset-xl4 offset-l4 offset-m4 offset-s4 center title">
		<p class = "galleries center">Galleries</p>
		</div>
	</div>
	<div class = "row">
		<div class = "col xl12 l12 m12 s12">
			<% @galleries.each do |g| %>
				<div class = "col xl6 l6 m6 s6">
					<div class = "gallery-info">
						<p class = "center gallery-name"><%= g.gallery_name %></p>
						<p class = concept><%= g.concept %></p>
						<div class = "center show-link">
							<%= link_to "show", users_user_path(g.user) %>
						</div>
					</div>
				</div>

			<% end %>
		</div>
	</div>


</div>