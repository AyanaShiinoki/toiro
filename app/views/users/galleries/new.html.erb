<div class="container">
	<h1>ギャラリー作成</h1>

	<% if user_signed_in? %>

		<%= form_with model: @gallery, url: {controller: 'galleries', action: 'create' } do |f| %>

			<label>ギャラリー名</label>
			<%= f.text_field :gallery_name %>
			<label>コンセプト</label>
			<%= f.text_field :concept %>
			<%= button_tag '作成', class: 'btn waves-effect waves-light', type: 'button', onclick: 'submit();' %>
		<% end %>

		<%= link_to "ギャラリー　一覧" , users_galleries_path %>

	<% end %>
</div>