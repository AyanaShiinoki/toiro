<!DOCTYPE html>
<html>
  <head>
    <title>Toiro</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jscroll/2.4.1/jquery.jscroll.min.js"></script>

  </head>

  <body>
<!-- ヘッダー -->
      <div class="container header center">
        <%= link_to root_path do %>
          <h4>toiro</h4>
        <% end %>
<!-- ユーザーログイン時 -->
      <% if user_signed_in? %>

<% if current_user.gallery == nil %>
  <%= link_to  new_users_gallery_path do %>
  ギャラリーを開く
  <% end %>
<% else %>
  <%= link_to users_user_path(current_user) do %>
    <%= current_user.gallery.gallery_name %>
  <% end %>
<% end %>

      <div class = "notificationbar">
        <%= link_to users_notifications_path, :data => {:target=>"slide-out"},:class=>"sidenav-trigger" do %>
          <% if unchecked_notifications.any?%>
            <i class="material-icons Medium">notifications</i>
            <%= render 'users/notifications/index' %>
          <% else %>
            <i class="material-icons Medium">alarm</i>
            <%= render 'users/notifications/index' %>
          <% end %>
        <% end %>
      </div>

    <div class = "links">
          <% if current_user.gallery == nil %>
            <%= link_to  new_users_gallery_path do %>
              ギャラリー作成
            <% end %>
          <% else %>
            <%= link_to new_users_exhibition_path do%>
             ひらく
            <% end %>
          <% end %>

        <a class="modal-trigger" href="#modal2">みる</a>
        <div id="modal2" class="modal">
          <div class="modal-content container">
              <%= link_to users_exhibitions_path do %>
                <%= image_tag 'exhibition.svg' , :size=>"80x50"%>
              <% end %>
              <%= link_to users_galleries_path do %>
                <%= image_tag 'gallery.svg' , :size=>"100x50"%>
              <% end %>
              <%= link_to users_users_path do %>
                <%= image_tag 'creator.svg' , :size=>"100x50"%>
              <% end %>
          </div>
        </div>

        <%= link_to destroy_user_session_path , method: :delete do %>
     <!--      <%= image_tag 'logout.svg' , :size=>"100x50", :class => "style_image"%> -->
           ログアウト
        <% end %>
<!-- 管理者ログイン時 -->
      <% elsif admin_signed_in? %>
        <%= link_to "管理者ログアウト" , destroy_admin_session_path, method: :delete%>
        <%= link_to "会員一覧" , admins_users_path%>
      <% else %>
<!-- 未ログイン -->
        <%= link_to "Login" , new_user_session_path%>
        <%= link_to "個展一覧" , users_exhibitions_path%>
        <%= link_to "クリエイター一覧" , users_users_path%>
        <%= link_to "管理者ログイン" , new_admin_session_path%>
      <% end %>
    </div>
    </div>

    <!-- ヘッダー -->
    <%= yield %>

<footer>

</footer>











<script>
$(function(){
$('select').formSelect();
});
</script>
  </body>
</html>



<!-- 通知サイドバー -->

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.sidenav');
    var options = {};
    var instances = M.Sidenav.init(elems, options);
  });

 $(function(){
    $('.sidenav').sidenav();
  });
</script>
<!-- 通知サイドバー -->
<script>

  document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.modal');
    var options = {};
    var instances = M.Modal.init(elems, options);
  });

  // Or with jQuery

  $(document).ready(function(){
    $('.modal').modal();
  });
</script>


