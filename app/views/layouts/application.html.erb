<!DOCTYPE html>
<html>
  <head>
    <title>Toiro</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jscroll/2.4.1/jquery.jscroll.min.js"></script>

  </head>

  <body>
<!-- ヘッダー -->
  <div class= "header" >
    <div class = "header-cover" >
    <!-- ユーザーログイン時 -->
      <div class = "header-contents">
        <div class = "row">

                <div class = "logo center">
                  <% if admin_signed_in? %>
                      <%= link_to admins_root_path do %>
                        <%= image_tag 'toiro-logo.svg', :size=>"200x200" ,class: "logo-image" %>
                      <% end %>
                  <% else %>
                      <%= link_to root_path do %>
                        <%= image_tag 'toiro-logo.svg', :size=>"200x200" ,class: "logo-image" %>
                      <% end %>
                  <% end %>
                </div>

              <div class = "session">
                <% if user_signed_in? %>
                  <%= link_to "Logout" ,destroy_user_session_path , method: :delete ,class: "logout" %>
                <% elsif admin_signed_in? %>
                  <%= link_to "管理者ログアウト" , destroy_admin_session_path, method: :delete,class: "admin-logout" %>
                <% else %>
                    <%= link_to "管理者はこちら" , new_admin_session_path,class: "admin-login"%>
                <% end %>
              </div>

                <div class = "links center">
                  <% if user_signed_in? %>

                      <% if current_user.gallery == nil %>
                        <%= link_to "ギャラリー作成",new_users_gallery_path %>
                      <% else %>
                        <%= link_to "ひらく", new_users_exhibition_path %>
                      <% end %>
                    <a class="modal-trigger" href="#modal2">みる</a>
                    <div id="modal2" class="modal">
                      <div class="modal-content container watch">
                          <%= link_to "個展" ,users_exhibitions_path,class: "exhibition" %>
                          <%= link_to  "ギャラリー" ,users_galleries_path,class: "gallery" %>
                          <%= link_to "クリエイター",users_users_path,class: "user" %>
                      </div>
                    </div>
                    <div class = "current-gallery">
                      <% if current_user.gallery == nil %>
                      ようこそ <%= link_to "#{current_user.name}", users_user_path(current_user.id) %>さん
                        <%= link_to  new_users_gallery_path do %>
                        ギャラリーを開く
                        <% end %>
                      <% else %>
                        <%= link_to "#{current_user.gallery.gallery_name}",users_user_path(current_user) %>
                      <% end %>
                    </div>
                    <div class = "notificationbar">
                      <%= link_to users_notifications_path, :data => {:target=>"slide-out"},:class=>"sidenav-trigger" do %>
                        <% if unchecked_notifications.any?%>
                          <i class="material-icons Medium">notifications</i>
                          <%= render 'users/notifications/index' %>
                        <% else %>
                          <i class="material-icons Medium">alarm</i>
                          <%= render 'users/notifications/index' %>
                        <% end %>
                      <% end %>
                    </div>
            <!-- 管理者ログイン時 -->
                <% elsif admin_signed_in? %>
                    <%= link_to "会員一覧" , admins_users_path%>
                    <%= link_to "個展一覧" , admins_exhibitions_path%>
                <% else %>
            <!-- 未ログイン -->
                    <%= link_to "個展一覧" , users_exhibitions_path%>
                    <%= link_to "クリエイター一覧" , users_users_path%>
                    <%= link_to "Login" , new_user_session_path%>
                    <%= link_to "Sign Up" , new_user_registration_path%>
                  <% end %>
                </div>

        </div>
      </div>
    </div>
  </div>
    <!-- ヘッダー -->
    <%= yield %>

<footer>

</footer>











<script>
$(function(){
$('select').formSelect();
});
</script>
  </body>
</html>



<!-- 通知サイドバー -->

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.sidenav');
    var options = {};
    var instances = M.Sidenav.init(elems, options);
  });

 $(function(){
    $('.sidenav').sidenav();
  });
</script>
<!-- 通知サイドバー -->
<script>

  document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.modal');
    var options = {};
    var instances = M.Modal.init(elems, options);
  });

  // Or with jQuery

  $(document).ready(function(){
    $('.modal').modal();
  });
</script>


